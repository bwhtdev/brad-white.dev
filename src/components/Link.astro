---
interface Props {
  url: string;
  name: string;
  small?: boolean;
}
const { url, name, small=false } = Astro.props as Props;
---

<a href={url} target='_blank' class='flex gap-1 cursor-pointer font-baunk text-gray-800 dark:text-gray-200 h-12 items-center justify-center space-y-2 font-semibold rounded-lg border-[1px] border-none bg-[rgba(208,138,138,0.5)] dark:bg-[rgba(163,82,82,0.5)] px-4 py-2 text-sm rounded-md shadow-md active:translate-y-[2px] transition-all duration-300 ease-out hover:shadow-[rgba(163,82,82,0.4)] dark:hover:shadow-[rgba(250,160,160,0.4)]'> 
  <svg class='stroke-gray-800 dark:stroke-[#D08A8A]' width="1.5em" height="1.5em" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <title>{name}</title>
    <slot />
  </svg>
  {!small && (<bold>{name}</bold>)}
</a>
